# Email Enrichment Service Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================================================
# REQUIRED: Supabase Database Configuration
# ==================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==================================================
# REQUIRED: API Keys
# ==================================================
# Hunter.io API Key (get from https://hunter.io/api-keys)
HUNTER_IO_API_KEY=your-hunter-api-key-here

# Perplexity API Key (get from https://www.perplexity.ai/settings)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ==================================================
# OPTIONAL: Service Configuration
# ==================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Processing configuration
MAX_WORKERS=5
BATCH_SIZE=10
REQUEST_TIMEOUT=30

# API Rate limits (requests per minute)
HUNTER_RATE_LIMIT=10
PERPLEXITY_RATE_LIMIT=30

# Processing thresholds
MAX_EMAILS_PER_DOMAIN=5
HUNTER_CONFIDENCE_THRESHOLD=70
VERIFICATION_CONFIDENCE_THRESHOLD=80

# Database connection settings
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30

# ==================================================
# OPTIONAL: Redis Caching (leave empty if not using)
# ==================================================
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# ==================================================
# OPTIONAL: Development Settings
# ==================================================
DEBUG_MODE=false
DRY_RUN=false
SKIP_EXISTING=true

# ==================================================
# INSTRUCTIONS
# ==================================================
# 1. Copy this file to .env: cp env.template .env
# 2. Fill in all REQUIRED values above
# 3. For Render deployment, set these in the dashboard instead
# 4. Keep this file secure - never commit .env to version control
